<!--views/partials/header.ejs -->
<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>


      </div>
    </div>
    <% if(user) {%>
      <span class='text-light mr-2'> Welcome: <%= user['email']  %></span>
      <a> 
        <form class="form-group mt-3" method='POST' action='/logout'> 
          <button class="btn btn-info mt-" >Logout</button>
        </form> 
      </a>
    <% } else if (!user) { %>
      <a>  
        <form class="form-inline" method="POST" action="/login"> 
          <input class='form-control' type='text' placeholder="email" name='email'></input>
          <input class='form-control' type='text' placeholder="Password" name='password'></input>
          <button class='btn btn-info' type='submit' value='login'>Login</button>
        </form>
      </a>
    <% } %>
  </nav>
</header>